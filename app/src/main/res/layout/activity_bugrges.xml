<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5753E6B3"
    tools:context="com.tohellik.magerik.bom.tohellik.magerik.GLjkjsdf">

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="256dp"
        android:layout_height="52dp"
        android:background="#E1E8A5"
        android:text="Fun"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/smelfelix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2"
        app:layout_constraintVertical_bias="0.289" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="191dp"
        android:layout_height="43dp"
        android:layout_marginTop="48dp"
        android:background="#E1E8A5"
        android:text="Relationships"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

    <Button
        android:id="@+id/smelfelix"
        android:layout_width="357dp"
        android:layout_height="77dp"
        android:layout_marginBottom="52dp"
        android:background="#A830DFDF"
        android:onClick="setagnmek"
        android:text="OKEY"
        android:textColorHighlight="#A8DF3090"
        android:textColorHint="#0384FFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="261dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:background="#74CAACAC"
        android:text="What are you looking for in chat?"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="241dp"
        android:layout_height="98dp"
        android:layout_marginTop="72dp"
        android:background="#E1E8A5"
        android:text="New Friendships"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>